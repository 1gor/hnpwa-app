<%- content_for( :top_items_active ) { "nav-link-active" } %>
<%= render partial: 'layouts/page_navigation', locals: { page: @page, total_pages: @total_pages, path: top_path } %>
<%= cache ['news-list', @top_item, @page] do %>
  <section class="section" data-controller="top-item items">

      <div class="columns is-multiline">
    
      <% @top_items.each_slice(4) do |slice| %>
      

        <% slice.each do |top_item| %>
          
            <%= render top_item %>
          
        <% end %>

      <% end %> 
      </div>
      
    </div>
  </section>
<% end %>
