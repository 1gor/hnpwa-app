<%- content_for( :ask_items_active ) { "is-active" } %>
<%= render partial: 'layouts/page_navigation', locals: { page: @page, total_pages: @total_pages, path: ask_path } %>
<%= cache ['asks-list', @ask_item, @page] do %>
  <section class="section" data-controller="ask-item items">
    <div class="columns is-multiline">
      <% @ask_items.each_slice(4) do |slice| %>
        <% slice.each do |item| %>
          <%= render item %>
        <% end %>
      <% end %>
    </div>
  </section>
<% end %>
